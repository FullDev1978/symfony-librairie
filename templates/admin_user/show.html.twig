{% block title %}User{% endblock %}

{% block body %}
<a href="{{ path('app_admin_user_index') }}" class="btn btn-dark">Retour Ã  la liste</a>
<h1>User</h1>
    
    <div class="d-flex justify-content-end align-items-end">
    {{ include('admin_user/_delete_form.html.twig') }}
    <a href="{{ path('app_admin_user_edit', {'id': user.id}) }}" class="btn btn-success ms-2"><i class="align-middle" data-feather="edit-2"></i></a>
    </div> 
    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
