{% extends 'base-backend.html.twig' %}

{% block title %}Auteur index{% endblock %}

{% block body %}
    <h1>Auteur index</h1>
    <a href="{{ path('app_admin_auteur_new') }}" class="btn btn-dark">Nouveau</a>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Prenom</th>
                <th>Peseudo</th>
                <th>Biographie</th>
                <th>ImageName</th>
                <th>UpddatedAt</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for auteur in auteurs %}
            <tr>
                <td>{{ auteur.id }}</td>
                <td>{{ auteur.nom }}</td>
                <td>{{ auteur.prenom }}</td>
                <td>{{ auteur.peseudo }}</td>
                <td>{{ auteur.biographie }}</td>
                <td>{{ auteur.imageName }}</td>
                <td>{{ auteur.upddatedAt ? auteur.upddatedAt|date('d-m-Y H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('app_admin_auteur_show', {'id': auteur.id}) }}"class="btn btn-dark"><i class="align-middle" data-feather="eye"></i></a>
                    <a href="{{ path('app_admin_auteur_edit', {'id': auteur.id}) }}"class="btn btn-success ms-2"><i class="align-middle" data-feather="edit-2"></i></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">Aucun fichier trouv√©</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
