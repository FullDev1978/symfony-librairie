{% extends 'base.html.twig' %}

{% block title %}{{ categorie.nom }}{% endblock %}

{% block body %}
<main class="container bg-white shadow">
<h1>{{ categorie.nom}}</h1>
<div class="row">
    {% for livre in categorie.livres %}
    <div class="col-12 col-md-4 col-lg-3 d-flex flex-wrap">
    <h2>{{ livre.titre }}</h2>
        <div class="align-self-end">
            <img src="{{ asset('images/livres/' ~ livre.imageName) }}" alt="{{ livre.titre }}" class="img-fluid">
            <a href="{{ path('app_categorie_show_livre', {'slug': categorie.slug, 'id': livre.id}) }}" class="btn btn-dark my-4">voir le d√©tail</a>
        </div>
    </div>
{% endfor %}
</div>
</main>
{% endblock %}